<h1><%= @cocktail.name %></h1>

<h4>Ingredients:</h4>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>, <%= dose.description %>
    <%= link_to "--> delete dose", dose_path(dose), method: :delete %>
  </li>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
