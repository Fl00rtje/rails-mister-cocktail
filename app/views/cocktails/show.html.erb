<div class="container">
  <h1><%= @cocktail.name %></h1>

  <h4>Ingredients:</h4>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>, <%= dose.ingredient.name %>
      <%= link_to "delete dose", dose_path(dose), method: :delete, :class => "btn btn-danger" %>
    </li>
    <% end %>
  </ul>

  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), :class => "btn btn-primary" %>
  <br>
  <%= link_to "Back to cocktails", cocktails_path %>
</div>
